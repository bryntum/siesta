{
  "name": "@bryntum/siesta",
  "version": "6.0.0",
  "description": "Next generation JavaScript/TypeScript testing and benchmarking tool",
  "main": "index.js",
  "module": "main.js",
  "type": "module",
  "scripts": {
    "chrome_bench": "google-chrome-stable --js-flags=\"--expose-gc\" $1",
    "bench": "node --expose-gc -r esm benchmarks/chrono2/suite_everything.js",
    "test": "node ./tests/index.js",
    "docs": "scripts/build_docs.sh"
  },
  "homepage": "https://github.com/bryntum/siesta",
  "bugs": "https://github.com/bryntum/siesta/issues",
  "repository": "git@github.com:bryntum/siesta.git",
  "keywords": [
    "JavaScript",
    "TypeScript",
    "testing",
    "benchmarking"
  ],
  "author": "Nickolay Platonov, Bryntum",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.0",
    "esm": "^3.2.25",
    "glob": "^7.1.6",
    "tslib": "^2.0.3"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/node": "^14.14.10",
    "siesta-lite": "^5.5.1",
    "snowpack": "^2.17.1",
    "tslint": "^6.1.3",
    "typedoc": "git://github.com/bryntum/typedoc.git#custom",
    "typedoc-default-themes": "git://github.com/bryntum/typedoc-default-themes.git",
    "typescript": "^4.1.2"
  },
  "snowpack": {
    "installOptions": {
      "polyfillNode": true
    }
  }
}
