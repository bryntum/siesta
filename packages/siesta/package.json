{
    "name": "@bryntum/siesta",
    "version": "6.0.0-alpha-3",
    "description": "Stress-free JavaScript/TypeScript testing and benchmarking tool",
    "main": "index.js",
    "module": "index.js",
    "type": "module",
    "bin": {
        "siesta": "bin/siesta.js"
    },
    "scripts": {
        "wds": "npx wds --node-resolve",
        "sass": "npx sass --watch resources/styling/ src/",
        "chrome_bench": "google-chrome-stable --js-flags=\"--expose-gc\" $1",
        "bench": "node --expose-gc -r esm benchmarks/chrono2/suite_everything.js",
        "deno": "deno run --allow-read --allow-env --unstable --quiet",
        "test": "node ./tests/index.js",
        "docs": "build/build_docs.sh"
    },
    "homepage": "https://github.com/bryntum/siesta",
    "bugs": "https://github.com/bryntum/siesta/issues",
    "repository": "git@github.com:bryntum/siesta.git",
    "keywords": [
        "stress-free",
        "javascript",
        "typescript",
        "testing",
        "benchmarking",
        "tool"
    ],
    "author": "Nickolay Platonov, Bryntum",
    "license": "MIT",
    "engines": {
        "node": ">=12.21.0"
    },
    "dependencies": {
        "chained-iterator": "^0.0.2",
        "chalk": "^4.1.0",
        "glob": "^7.1.7",
        "minimatch": "^3.0.4",
        "node-fetch": "^3.0.0-beta.9",
        "playwright": "^1.11.0",
        "puppeteer": "^10.0.0",
        "ws": "^7.4.4",
        "typescript-mixin-class": "^0.0.1",
        "typescript-serializable-mixin": "^0.0.1",
        "@bryntum/chronograph": "^2.0.1",
        "@web/dev-server": "^0.1.17"
    },
    "peerDependencies": {
        "typescript-mixin-class": "^0.0.1",
        "typescript-serializable-mixin": "^0.0.1"
    },
    "devDependencies": {
        "@types/cssom": "^0.4.1",
        "@types/glob": "^7.1.3",
        "@types/minimatch": "^3.0.5",
        "@types/node": "^14.14.10",
        "@types/sass": "^1.16.0",
        "@types/ws": "^7.4.1",
        "bulma": "^0.9.3",
        "cssom": "^0.4.4",
        "esinstall": "^1.1.7",
        "sass": "^1.32.11",
        "tslint": "^6.1.3",
        "typedoc": "git://github.com/bryntum/typedoc.git#custom",
        "typedoc-default-themes": "git://github.com/bryntum/typedoc-default-themes.git",
        "typescript": "git://github.com/bryntum/TypeScript.git#feat/7342"
    }
}
