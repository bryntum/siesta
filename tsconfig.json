{
    "compilerOptions" : {
//        "importHelpers"             : true,
        "experimentalDecorators"    : true,

        "jsx"                   : "react",
        "jsxFactory"            : "SiestaJSX.createElement",
        "jsxFragmentFactory"    : "SiestaJSX.Fragment",
        "target": "es2017",
//        "strictNullChecks"      : true,

        "sourceMap"             : false,
        "lib"                   : [
            "esnext",
            "dom"
        ],
        "module"                : "esnext",
        "moduleResolution"      : "Node",
        "allowSyntheticDefaultImports"    : true
    },

    "include" : [
        "main.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "scripts/**/*.ts",
        "tests/**/*.ts",
        "benchmarks/**/*.ts",
        "examples/**/*.ts"
    ],

    "exclude" : [
    ]
}
