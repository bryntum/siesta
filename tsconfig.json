{
    "compilerOptions" : {
        "experimentalDecorators"    : true,

        "noImplicitThis"            : true,
        "strictBindCallApply"       : true,

        "jsx"                       : "react",
        "jsxFactory"                : "SiestaJSX.createElement",
        "jsxFragmentFactory"        : "SiestaJSX.Fragment",

        "target"                    : "es2017",
        "sourceMap"                 : false,

        "lib"                       : [
            "esnext",
            "dom"
        ],

        "module"                    : "esnext",
        "moduleResolution"          : "node",

        "allowSyntheticDefaultImports"    : true
    },

    "include" : [
        "main.ts",
        "nodejs.ts",
        "browser.ts",
        "bin/**/*.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "scripts/**/*.ts",
        "tests/**/*.ts",
        "tests/**/*.tsx",
        "benchmarks/**/*.ts",
        "examples/**/*.ts"
    ],

    "exclude" : [
    ]
}
